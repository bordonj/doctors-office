 @{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor;

<h2>Doctor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@using DoctorsOffice.Models;

<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This doctor does not have any patients</p>
}
else
{
  <h4>Patients this doctor contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Patient.Name</li>
  }
  </ul>
}
<li>@Model.JoinEntities.Count</li>

<p>@Html.ActionLink("Add Specialty", "Create", "Specialties")</p>
<p>@Html.ActionLink("Back to Doctors", "Index")</p>
<p>@Html.ActionLink("Edit Doctor", "Edit", new { id = Model.DoctorId })</p>
<p>@Html.ActionLink("Delete Doctor", "Delete", new { id = Model.DoctorId })</p> 